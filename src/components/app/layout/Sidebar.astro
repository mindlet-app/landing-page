---
import {
  LucidePanelLeftClose,
  LucideHome,
  LucideUser,
  LucideSettings,
  LucideBarChart3,
  LucideHelpCircle,
  LucideLogOut,
} from "lucide-react";
import SidebarNavItem from "@components/app/layout/SidebarNavItem.astro";
---

<div class="drawer-side z-30">
  <label
    for="my-drawer"
    aria-label="close sidebar"
    class="drawer-overlay bg-black/40 transition-opacity duration-300"
    id="drawer-overlay"
  >
  </label>
  <div class="sidebar-container h-full w-64 p-0 relative">
    <div class="sidebar-content bg-white h-full shadow-xl">
      <div class="flex flex-col h-full">
        <!-- Header -->
        <div
          class="p-4 border-b border-slate-200 flex items-center justify-between"
        >
          <p>logo</p>

          <!-- Toggle button to close sidebar -->
          <button
            id="sidebar-close-btn"
            class="cursor-pointer w-8 h-8 flex items-center justify-center rounded-md hover:bg-slate-100"
          >
            <LucidePanelLeftClose className="h-5 w-5 text-slate-500" />
          </button>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 overflow-y-auto p-4">
          <ul class="space-y-1">
            <SidebarNavItem icon={LucideHome} label="Tableau de bord" />
            <SidebarNavItem
              icon={LucideUser}
              label="Profil utilisateur"
              isActive={true}
            />
            <SidebarNavItem icon={LucideBarChart3} label="Statistiques" />

            <li class="pt-4">
              <div class="px-3 pb-1 text-xs font-medium text-slate-500">
                Paramètres
              </div>
            </li>
            <SidebarNavItem icon={LucideSettings} label="Configuration" />
            <SidebarNavItem icon={LucideHelpCircle} label="Aide & Support" />
          </ul>
        </nav>

        <!-- Footer -->
        <div class="p-4 border-t border-slate-200">
          <SidebarNavItem icon={LucideLogOut} label="Déconnexion" />
        </div>
      </div>
    </div>
  </div>
</div>
