---
import CreationMethods from "@components/landingPage/ai-presentation/CreationMethods.astro";
import ExampleWorkflow from "@components/landingPage/ai-presentation/ExampleWorkflow.astro";
import SmartNews from "@components/landingPage/ai-presentation/SmartNews.astro";
import BigTitle from "@components/ui/BigTitle";
import Paragraph from "@components/ui/Paragraph";
---

<section id="presentation-ia" class="pt-28">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <BigTitle>Créer votre collection de cartes avec l'IA ! </BigTitle>
      <Paragraph>
        Créez, enrichissez et personnalisez vos collections de flashcards en
        quelques instants, depuis n'importe quelle source avec notre IA avancée.
      </Paragraph>
    </div>

    <CreationMethods />
    <SmartNews />
    <ExampleWorkflow />
  </div>
</section>
