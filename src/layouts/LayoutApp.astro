---
import "../styles/app.css";
import "@components/app/layout/sidebar.css";
import Sidebar from "@components/app/layout/Sidebar.astro";
import { LucidePanelLeftOpen } from "lucide-react";
import ToggleButton from "@components/app/layout/ToggleButton.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Enterprise Dashboard</title>
  </head>
  <body class="bg-slate-50">
    <div class="drawer lg:drawer-open" id="drawer-container">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content transition-all duration-300 ease-in-out">
        <main class="min-h-screen p-6 md:p-8 lg:p-10">
          <!-- Mobile toggle button -->
          <ToggleButton
            id="drawer-open-btn"
            ariaLabel="Open sidebar"
            className="fixed top-4 left-4 z-20 flex h-10 w-10 items-center justify-center bg-white shadow-md rounded-md cursor-pointer hover:bg-gray-50 transition-all lg:hidden"
          >
            <LucidePanelLeftOpen className="h-5 w-5 text-slate-700" />
          </ToggleButton>

          <!-- Desktop toggle button -->
          <ToggleButton
            id="desktop-sidebar-open-btn"
            ariaLabel="Open sidebar"
            className="fixed top-4 left-4 z-20 hidden h-10 w-10 items-center justify-center rounded-md bg-white shadow-lg cursor-pointer hover:bg-gray-50 transition-all"
          >
            <LucidePanelLeftOpen className="h-5 w-5 text-slate-700" />
          </ToggleButton>

          <div
            class="min-h-[calc(100vh-8rem)] p-6 bg-white rounded-xl shadow-sm"
          >
            <slot />
          </div>
        </main>
      </div>

      <Sidebar />
    </div>

    <script src="@components//app/layout/sidebar.js"></script>
  </body>
</html>
