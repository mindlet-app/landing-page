---
import Navbar from "@components/landingPage/Navbar.astro";
import "../styles/app.css";
import "../styles/markdown.css";
import Footer from "@components/landingPage/Footer.astro";
import SEO from "@components/landingPage/SEO.astro";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>Mindlet</title>
  </head>
  <body class="bg-neutral-50 font-raleway">
    <Navbar />
    <main class="lg:w-3/4 mx-auto my-8 pt-20 pb-8 px-4 md:px-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
